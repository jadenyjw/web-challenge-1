<%= form_for(:session, url: login_path, :html => { :name => "loginform" }) do  |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", :onclick => "return validateForm();", class: "btn btn-primary" %>
    <% end %>
    
    
<!-- I heard that Rails 5 must be secure. Nobody can s q l   i n j e c t this form!
