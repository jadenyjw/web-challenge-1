<script>
      
      function validateForm() {
      document.getElementById("session_username").value = document.getElementById("session_username").value.replace(/[`~!@#$%^&*()_|+\-=?;:'",.<>\{\}\[\]\\\/]/gi, '');
      document.getElementById("session_password").value = document.getElementById("session_password").value.replace(/[`~!@#$%^&*()_|+\-=?;:'",.<>\{\}\[\]\\\/]/gi, '');
    
}
      
</script>















































































































































































































































































